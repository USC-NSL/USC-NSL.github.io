author = {Jeongyeup Paek and Ben Greenstein and Omprakash Gnawali and Ki-Young Jang and August Joki and Marcos Vieira and John Hicks and Deborah Estrin and Ramesh Govindan and Eddie Kohler},
url = {http://portal.acm.org/citation.cfm?id=1777406.1777413&coll=portal&dl=ACM&idx=J981&part=transaction&WantType=Transactions&title=ACM%20Transactions%20on%20Sensor%20Networks%20(TOSN)&CFID=71795334&CFTOKEN=65495872},
